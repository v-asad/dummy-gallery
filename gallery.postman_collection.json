{
  "info": {
    "name": "Gallery API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Gallery backend API"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass\",\n  \"bio\": \"This is my bio\"\n}"
        },
        "url": { "raw": "http://localhost:8080/api/register", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass\"\n}"
        },
        "url": { "raw": "http://localhost:8080/api/login", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "login"] }
      }
    },
    {
      "name": "Get User Profile",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/user/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "user", "1"] }
      }
    },
    {
      "name": "Upload Photo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "image", "type": "file", "src": "" },
            { "key": "caption", "type": "text", "value": "A nice photo" }
          ]
        },
        "url": { "raw": "http://localhost:8080/api/photos", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "photos"] }
      }
    },
    {
      "name": "Edit Photo Caption",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"caption\": \"Updated caption\"\n}"
        },
        "url": { "raw": "http://localhost:8080/api/photos/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "photos", "1"] }
      }
    },
    {
      "name": "Delete Photo",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "http://localhost:8080/api/photos/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "photos", "1"] }
      }
    },
    {
      "name": "Paginated Feed",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/feed?page=1&limit=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "feed"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" }
          ]
        }
      }
    },
    {
      "name": "Get Photos by User",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/photos/user/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "photos", "user", "1"] }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" }
  ]
}
